{
  "private": true,
  "description": "A frontend-focused clone of Netflix.",
  "homepage": "https://github.com/cs-schmidt/netflix-clone#readme",
  "bugs": {
    "url": "https://github.com/cs-schmidt/netflix-clone/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cs-schmidt/netflix-clone"
  },
  "license": "MIT",
  "author": "Ethan Schmidt <ebs.euler@gmail.com> (https://cs-schmidt.dev/)",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack build --config webpack.base.cjs --progress && firebase emulators:start",
    "build:deploy": "cross-env NODE_ENV=deployment webpack build --config webpack.base.cjs --progress && firebase deploy",
    "build:report": "webpack-bundle-analyzer --port='auto' ./public/reports/bundles.json",
    "dev": "cross-env NODE_ENV=development webpack serve --config webpack.base.cjs",
    "format": "sort-package-json './package.json' && prettier --ignore-unknown --write .",
    "lint": "npm run lint:js && npm run lint:styles",
    "lint:js": "eslint --ignore-path .gitignore --fix **/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx}",
    "lint:styles": "stylelint --ignore-path .gitignore --fix src/**/*.{scss,css}",
    "prepare": "husky install"
  },
  "dependencies": {
    "firebase": "^10.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/plugin-transform-runtime": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@babel/runtime": "^7.22.10",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.10",
    "@svgr/webpack": "^8.0.1",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "babel-loader": "^9.1.3",
    "compression-webpack-plugin": "^10.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "core-js": "^3.32.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "cssnano": "^6.0.1",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^8.47.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-webpack": "^0.13.4",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "firebase-tools": "^12.4.7",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.27",
    "postcss-loader": "^7.3.3",
    "postcss-normalize": "^10.0.1",
    "postcss-preset-env": "^9.1.1",
    "prettier": "^3.0.1",
    "react-refresh": "^0.14.0",
    "sass": "^1.65.1",
    "sass-loader": "^13.3.2",
    "sort-package-json": "^2.5.1",
    "stylelint": "^15.10.2",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  }
}
